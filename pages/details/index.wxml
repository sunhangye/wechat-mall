<view class="container">
  <view>
    <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
      <block wx:for="{{goodsPicsInfo}}">
        <swiper-item>
          <image src="{{item.picurl}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="shopping_container">
        <view class="title">{{shopppingDetails}}</view>
        <view class="reason">{{shopppingDetails.reason}}</view>
    </view>
</view>
