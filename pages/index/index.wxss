.container {
  background-color: #f2f2f2;
}

.swiper_box {
  width: 100%;
}

swiper-item image {
  display: inline-block;
  width: 100%;
  overflow: hidden;
}

view.text {
  display: flex;
  align-items: center;
  position: relative;
  padding: 15px 10px 15px 12px;
  font-size: 15px;
  color: #656565;
}

view.text::before {
  position: absolute;
  display: block;
  content: '';
  left: -5px;
  width: 2px;
  height: 100%;
  background-color: #09bb07;
}

.line_flag {
  width: 3px;
  height: 15px;
  display: inline-block;
  background-color: #f9f027;
}

view.text text {
  margin-left: 10px;
  line-height: 18px;
  font-weight: bold;
}

view.venues_box, view.choice_box {
  padding: 0 20rpx;
}

.venues_item {
  display: inline-block;
  width: 48%;
  margin: 0 1%;
}

.venues_item image {
  width: 100%;
  height: 90px;
}

.choice_item {
  margin-bottom: 15px;
  border: 1px solid #E4E4E4;
}

.choice_item image {
  width: 100%;
  height: 200px;
}

.choice_list .title {
  margin-bottom: 10px;
  font-size: 14px;
  color: #333;
  font-weight: bolder;
  text-align: left;
  line-height: 1.6;
}

.choice_item .choice_price {
  margin-left: 10px;
  padding: 15px 0;
  font-size: 14px;
}

.choice_item .choice_price .our_price {
  padding-right: 20rpx;
  color: #f16236;
}

.choice_item .choice_price .our_price text {
  font-style: normal;
  font-weight: bolder;
}

 .choice_item .choice_price .market_price {
   color: #939393
 }

 .choice_item .choice_price .market_price text {
    text-decoration: line-through;
 }